pipeline {
    agent {
        node {
            label 'openidl'
        }
    }
    parameters {
        string description: 'Organization name of the node', name: 'org_name', trim: true
        string description: 'Environment (dev | test | prod)', name: 'env', trim: true
        }
    stages{
        stage('PreregisterUsers'){
           steps {
                script {
                    org = params.org_name.substring(0,4)
                }
                wrap([$class: 'AnsiColorBuildWrapper', colorMapName: "xterm"]) {
                    ansibleTower(
                        towerServer: 'AWX',
                        towerCredentialsId: 'AWX',
                        templateType: 'job',
                        jobTemplate: "${org}-${params.env}-openidl-preregister-users",
                        jobType: "run",
                        towerLogLevel: 'full',
                        removeColor: false,
                        async: false,
                        importTowerLogs: true,
                        extraVars: """---
                        org_name: '${org}'
                        env: '${params.env}'
                        network:
                            org_name: '${org}'
                        """
                        )
                }
            }
        }
    }
    post {
        success {
            echo "The PreregisterUsers action is successful. Review logs"

        }
        failure {
            echo "The PreregisterUsers action is failed, Please investigate"

        }
    }
}

